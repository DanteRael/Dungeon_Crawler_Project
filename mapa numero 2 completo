							mapa[i][j-1] = auxiliar;
						}
					}
				}
			}
		}
		
		if(escolha == 's')
		{
			for(i = maximo2-1; i > minimo; i--)
			{
				for(j = maximo2-1; j > minimo; j--)
				{
					if(mapa[i][j] == '&')
