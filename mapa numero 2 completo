		if(auxiliar2 == '@')
		{
			printf("auxiliar2 = '@'\n\n");
		}
		else
		{
			printf("auxiliar2 = ' '\n\n");
		}
		
		if(auxiliar2 == 'O')
		{
			printf("auxiliar2 = '@'\n\n");
		}
